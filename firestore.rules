rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /proposals/{proposalId} {
      // READ: Anyone with the link can view a proposal. 
      allow get: if true;

      // LIST: Prevent enumeration of all proposals.
      allow list: if false;
      
      // CREATE: Allow creation if the user is signed in and provides the required names.
      allow create: if isSignedIn() 
                    && request.resource.data.yourName is string
                    && request.resource.data.partnerName is string;

      // WRITE: Client-side updates and deletes are disallowed to protect data integrity.
      allow update, delete: if false;
    }
    
    /**
     * @description Secures the decision history collection used for machine learning.
     *              This collection acts as a "write-only" log or "drop box".
     */
    match /decision_history/{decisionHistoryId} {
      // Any user, including anonymous ones, can create a new decision record.
      allow create: if true;
      
      // No one can read or modify existing records from the client.
      allow get, list, update, delete: if false;
    }
  }
}
